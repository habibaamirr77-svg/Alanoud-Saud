        /* Cartoon Timeline Styles - Website Colors */
        .timeline-section {
            margin-top: 60px;
            padding: 40px 0;
            background-color: #161b22;
            border-radius: 15px;
            overflow: hidden;
            position: relative;
            border: 1px solid #30363d;
        }

        /* Sky decoration - static for performance */
        .timeline-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: 
                radial-gradient(1px 1px at 20px 30px, rgba(255,255,255,0.3), transparent),
                radial-gradient(1px 1px at 40px 70px, rgba(255,255,255,0.2), transparent),
                radial-gradient(1px 1px at 50px 160px, rgba(255,255,255,0.3), transparent);
            background-repeat: repeat;
            background-size: 200px 200px;
        }

        /* Clouds - styled as artistic elements */
        .cloud {
            position: absolute;
            font-size: 1.5em;
            opacity: 0.3;
            filter: grayscale(50%);
        }

        .cloud-1 { top: 20px; left: 10%; }
        .cloud-2 { top: 35px; left: 60%; }
        .cloud-3 { top: 15px; left: 80%; }

        .timeline-section h2 {
            color: #d4af37;
            font-size: 2em;
            text-align: center;
            margin-bottom: 20px;
            position: relative;
            z-index: 2;
            text-shadow: 0 0 20px rgba(212, 175, 55, 0.3);
        }

        .timeline-section h2::after {
            content: '';
            display: block;
            width: 100px;
            height: 3px;
            background: linear-gradient(90deg, transparent, #d4af37, transparent);
            margin: 15px auto 0;
        }

        /* Road container */
        .road-container {
            position: relative;
            padding: 180px 20px 120px;
            overflow-x: auto;
            overflow-y: hidden;
        }

        /* Cartoon Road - styled to match website */
        .cartoon-road {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            min-width: max-content;
            padding: 0 60px;
            position: relative;
            height: 120px;
        }

        /* Road surface */
        .road-surface {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 80px;
            background: linear-gradient(180deg, #21262d 0%, #161b22 100%);
            border-radius: 10px;
            border: 2px solid #30363d;
        }

        /* Road lines */
        .road-lines {
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 4px;
            transform: translateY(-50%);
            background: repeating-linear-gradient(
                90deg,
                #d4af37 0px,
                #d4af37 40px,
                transparent 40px,
                transparent 80px
            );
        }

        /* Road edges */
        .road-edge {
            position: absolute;
            bottom: -5px;
            left: 0;
            right: 0;
            height: 8px;
            background: repeating-linear-gradient(
                90deg,
                #d4af37 0px,
                #d4af37 15px,
                #30363d 15px,
                #30363d 30px
            );
        }

        .road-edge.top { bottom: auto; top: -5px; }

        /* Cartoon Car - elegant design */
        .cartoon-car {
            position: absolute;
            bottom: 20px;
            left: 80px;
            z-index: 10;
        }

        .car-body {
            width: 90px;
            height: 40px;
            background: linear-gradient(180deg, #d4af37 0%, #b8962e 50%, #8a7424 100%);
            border-radius: 20px 20px 8px 8px;
            position: relative;
            box-shadow: 0 5px 20px rgba(212, 175, 55, 0.3);
        }

        /* Car roof */
        .car-roof {
            position: absolute;
            top: -18px;
            left: 20px;
            width: 50px;
            height: 22px;
            background: linear-gradient(180deg, #30363d 0%, #21262d 100%);
            border-radius: 12px 12px 5px 5px;
            border: 2px solid #d4af37;
        }

        /* Car windows */
        .car-window {
            position: absolute;
            top: -14px;
            width: 18px;
            height: 14px;
            background: linear-gradient(180deg, #58a6ff 0%, #388bfd 100%);
            border-radius: 6px 6px 2px 2px;
            border: 1px solid #8b949e;
        }

        .car-window.front { left: 24px; }
        .car-window.back { right: 24px; }

        /* Car headlights */
        .car-light {
            position: absolute;
            width: 10px;
            height: 6px;
            background: #e6edf3;
            border-radius: 2px;
            bottom: 8px;
            box-shadow: 0 0 8px rgba(230, 237, 243, 0.5);
        }

        .car-light.left { left: -4px; }
        .car-light.right { right: -4px; }

        /* Car wheels */
        .car-wheel {
            position: absolute;
            bottom: -8px;
            width: 20px;
            height: 20px;
            background: #0d1117;
            border-radius: 50%;
            border: 3px solid #30363d;
        }

        .car-wheel.left { left: 10px; }
        .car-wheel.right { right: 10px; }

        /* Wheel hubcaps */
        .car-wheel::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 6px;
            height: 6px;
            background: #d4af37;
            border-radius: 50%;
        }

        /* Car exhaust */
        .car-exhaust {
            position: absolute;
            right: -6px;
            bottom: 4px;
            width: 8px;
            height: 5px;
            background: #30363d;
            border-radius: 2px;
        }

        /* Smoke animation */
        .smoke {
            position: absolute;
            right: -12px;
            bottom: 4px;
            font-size: 0.7em;
            opacity: 0.4;
            filter: grayscale(50%);
        }

        /* Year markers on road */
        .year-markers {
            display: flex;
            align-items: flex-end;
            justify-content: flex-start;
            min-width: max-content;
            padding: 0 20px;
            position: relative;
            margin-top: 20px;
            z-index: 5;
        }

        .year-marker {
            margin: 0 25px;
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .year-marker-btn {
            width: 55px;
            height: 55px;
            border-radius: 50%;
            background: linear-gradient(135deg, #161b22 0%, #21262d 100%);
            border: 3px solid #d4af37;
            color: #d4af37;
            font-size: 0.95em;
            font-weight: 700;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 15px rgba(0,0,0,0.4);
        }

        .year-marker-btn:hover {
            background: linear-gradient(135deg, #21262d 0%, #161b22 100%);
        }

        .year-marker.active .year-marker-btn {
            background: linear-gradient(135deg, #d4af37 0%, #b8962e 100%);
            color: #0d1117;
            box-shadow: 0 0 20px rgba(212, 175, 55, 0.4);
        }

        /* Road marker for year */
        .year-road-marker {
            width: 25px;
            height: 15px;
            background: linear-gradient(180deg, #d4af37 0%, #b8962e 100%);
            clip-path: polygon(50% 100%, 0% 0%, 100% 0%);
            margin-top: 5px;
        }

        /* Works popup - hidden by default */
        .works-popup {
            position: absolute;
            bottom: 100%;
            left: 50%;
            transform: translateX(-50%) translateY(20px);
            background: linear-gradient(135deg, #161b22 0%, #21262d 100%);
            border-radius: 15px;
            padding: 15px 20px;
            min-width: 220px;
            text-align: center;
            box-shadow: 0 -10px 40px rgba(0,0,0,0.5);
            border: 2px solid #d4af37;
            opacity: 0;
            visibility: hidden;
            z-index: 20;
            margin-bottom: 15px;
            max-height: 350px;
            overflow-y: auto;
            transition: opacity 0.3s ease, visibility 0.3s ease;
        }

        .works-popup::-webkit-scrollbar {
            width: 6px;
        }

        .works-popup::-webkit-scrollbar-track {
            background: #0d1117;
            border-radius: 3px;
        }

        .works-popup::-webkit-scrollbar-thumb {
            background: #d4af37;
            border-radius: 3px;
        }

        .works-popup::after {
            content: '';
            position: absolute;
            bottom: -12px;
            left: 50%;
            transform: translateX(-50%);
            border-width: 12px 12px 0 12px;
            border-style: solid;
            border-color: #21262d transparent transparent transparent;
        }

        .year-marker:hover .works-popup,
        .year-marker.active .works-popup {
            opacity: 1;
            visibility: visible;
            transform: translateX(-50%) translateY(0);
        }

        .works-popup h4 {
            color: #d4af37;
            font-size: 1em;
            margin-bottom: 12px;
            font-weight: 700;
            border-bottom: 1px solid #30363d;
            padding-bottom: 8px;
        }

        .works-popup .works-list {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .works-popup .work-item {
            background: rgba(212, 175, 55, 0.1);
            border: 1px solid #30363d;
            border-radius: 8px;
            padding: 10px 12px;
            cursor: pointer;
            transition: background 0.2s ease, border-color 0.2s ease;
        }

        .works-popup .work-item:hover {
            background: rgba(212, 175, 55, 0.2);
            border-color: #d4af37;
        }

        .works-popup .work-item h5 {
            color: #e6edf3;
            font-size: 0.95em;
            margin-bottom: 4px;
        }

        .works-popup .work-item .role {
            color: #8b949e;
            font-size: 0.85em;
        }

        .works-popup .work-item.featured {
            background: rgba(212, 175, 55, 0.15);
            border: 1px solid #d4af37;
        }

        .works-popup .work-item.featured h5 {
            color: #d4af37;
        }

        /* Trees decoration - artistic palms */
        .tree {
            position: absolute;
            bottom: 80px;
            font-size: 2em;
            filter: grayscale(30%);
            opacity: 0.6;
        }

        .tree-1 { left: 5%; }
        .tree-2 { right: 5%; }
        .tree-3 { left: 25%; }
        .tree-4 { right: 25%; }
        .tree-5 { left: 75%; }
        .tree-6 { right: 75%; }

        /* Navigation dots */
        .timeline-nav {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 20px;
            position: relative;
            z-index: 2;
        }

        .timeline-nav-btn {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background-color: transparent;
            border: 2px solid #d4af37;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .timeline-nav-btn:hover,
        .timeline-nav-btn.active {
            background-color: #d4af37;
            transform: scale(1.2);
        }

        /* Scroll hint */
        .timeline-scroll-hint {
            text-align: center;
            color: #8b949e;
            font-size: 0.95em;
            margin-bottom: 10px;
            position: relative;
            z-index: 2;
        }

        /* Light mode support */
        body.light-mode .timeline-section {
            background-color: #f6f8fa;
            border-color: #e1e4e8;
        }

        body.light-mode .works-popup {
            background: linear-gradient(135deg, #ffffff 0%, #f6f8fa 100%);
            border-color: #b8962e;
        }

        body.light-mode .works-popup::after {
            border-color: #f6f8fa transparent transparent transparent;
        }

        body.light-mode .works-popup h4 {
            color: #b8962e;
            border-color: #e1e4e8;
        }

        body.light-mode .works-popup .work-item {
            background: rgba(184, 150, 46, 0.1);
            border-color: #e1e4e8;
        }

        body.light-mode .works-popup .work-item:hover {
            background: rgba(184, 150, 46, 0.2);
            border-color: #b8962e;
        }

        body.light-mode .works-popup .work-item h5 {
            color: #24292f;
        }

        body.light-mode .works-popup .work-item.featured {
            background: rgba(184, 150, 46, 0.15);
            border-color: #b8962e;
        }

        body.light-mode .works-popup .work-item.featured h5 {
            color: #b8962e;
        }

        body.light-mode .works-popup .work-item .role {
            color: #57606a;
        }

        body.light-mode .year-marker-btn {
            background: linear-gradient(135deg, #ffffff 0%, #f6f8fa 100%);
            color: #b8962e;
            border-color: #b8962e;
        }

        body.light-mode .year-marker.active .year-marker-btn {
            background: linear-gradient(135deg, #b8962e 0%, #a68529 100%);
            color: #ffffff;
        }

        body.light-mode .timeline-nav-btn {
            border-color: #b8962e;
        }

        body.light-mode .timeline-nav-btn.active {
            background-color: #b8962e;
        }

        body.light-mode .road-surface {
            background: linear-gradient(180deg, #e1e4e8 0%, #d0d7de 100%);
            border-color: #c9d1d9;
        }

        body.light-mode .timeline-scroll-hint {
            color: #57606a;
        }

        /* Games Section Styles */
        .game-container {
            max-width: 700px;
            margin: 0 auto;
        }

        .game-screen {
            display: none;
            text-align: center;
            padding: 30px;
            background-color: #161b22;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.3);
            animation: fadeIn 0.5s ease-out;
        }

        .game-screen.active {
            display: block;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .game-icon {
            font-size: 4em;
            margin-bottom: 20px;
            animation: bounce 2s infinite;
        }

        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
            40% { transform: translateY(-15px); }
            60% { transform: translateY(-7px); }
        }

        /* Additional Animations */
        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
            20%, 40%, 60%, 80% { transform: translateX(5px); }
        }

        @keyframes wobble {
            0%, 100% { transform: rotate(0deg); }
            15% { transform: rotate(-5deg); }
            30% { transform: rotate(3deg); }
            45% { transform: rotate(-3deg); }
            60% { transform: rotate(2deg); }
            75% { transform: rotate(-1deg); }
        }

        @keyframes glow {
            0%, 100% { box-shadow: 0 0 5px rgba(212, 175, 55, 0.5); }
            50% { box-shadow: 0 0 30px rgba(212, 175, 55, 0.8), 0 0 60px rgba(212, 175, 55, 0.4); }
        }

        @keyframes float {
            0%, 100% { transform: translateY(0) rotate(0deg); }
            25% { transform: translateY(-10px) rotate(2deg); }
            50% { transform: translateY(0) rotate(0deg); }
            75% { transform: translateY(-5px) rotate(-1deg); }
        }

        @keyframes heartbeat {
            0%, 100% { transform: scale(1); }
            14% { transform: scale(1.1); }
            28% { transform: scale(1); }
            42% { transform: scale(1.1); }
            70% { transform: scale(1); }
        }

        @keyframes shimmer {
            0% { background-position: -200% 0; }
            100% { background-position: 200% 0; }
        }

        @keyframes rollIn {
            0% { transform: rotate(-720deg) translateX(-100px); opacity: 0; }
            100% { transform: rotate(0) translateX(0); opacity: 1; }
        }

        @keyframes zoomInOut {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        @keyframes slideUpDown {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        /* Animated classes */
        .animate-bounce {
            animation: bounce 1s ease infinite;
        }

        .animate-shake {
            animation: shake 0.5s ease-in-out;
        }

        .animate-wobble {
            animation: wobble 1s ease-in-out;
        }

        .animate-glow {
            animation: glow 2s ease-in-out infinite;
        }

        .animate-float {
            animation: float 3s ease-in-out infinite;
        }

        .animate-heartbeat {
            animation: heartbeat 1.5s ease-in-out infinite;
        }

        .animate-zoom {
            animation: zoomInOut 2s ease-in-out infinite;
        }

        .animate-slide {
            animation: slideUpDown 2s ease-in-out infinite;
        }

        /* Game title animation */
        .game-title {
            animation: wobble 2s ease-in-out infinite, glow 3s ease-in-out infinite;
        }

        /* Game icon animations */
        .game-icon {
            font-size: 4em;
            margin-bottom: 20px;
            animation: bounce 2s infinite, float 3s ease-in-out infinite;
        }

        /* Result icon animation */
        .result-icon {
            font-size: 5em;
            margin-bottom: 15px;
            animation: heartbeat 1.5s ease-in-out infinite, glow 2s ease-in-out infinite;
        }

        /* Game button hover effects */
        .game-btn {
            display: inline-block;
            padding: 15px 40px;
            background: linear-gradient(135deg, #d4af37 0%, #b8962e 100%);
            color: #0d1117;
            border: none;
            border-radius: 50px;
            font-size: 1.2em;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin: 10px;
            position: relative;
            overflow: hidden;
        }

