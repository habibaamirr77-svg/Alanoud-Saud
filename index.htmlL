        function generateCartoonTimeline() {
            const markersContainer = document.getElementById('yearMarkers');
            const navContainer = document.getElementById('timelineNav');
            
            timelineData.forEach((item, index) => {
                // Create year marker
                const markerDiv = document.createElement('div');
                markerDiv.className = 'year-marker' + (index === 0 ? ' active' : '');
                markerDiv.dataset.year = item.year;
                markerDiv.dataset.index = index;
                
                // Create works list HTML
                let worksListHtml = '';
                item.works.forEach(work => {
                    worksListHtml += `
                        <div class="work-item ${work.featured ? 'featured' : ''}" 
                             onclick="showSeriesSummary('${work.title}', '${item.year}', '🎭 ${work.role}')">
                            <h5>${work.title}</h5>
                            <div class="role">${work.role}</div>
                        </div>
                    `;
                });
                
                markerDiv.innerHTML = `
                    <div class="works-popup">
                        <h4>أعمال ${item.year}</h4>
                        <div class="works-list">
                            ${worksListHtml}
                        </div>
                    </div>
                    <button class="year-marker-btn" onclick="moveCarToYear(${index})">${item.year}</button>
                    <div class="year-road-marker"></div>
                `;
                
                markersContainer.appendChild(markerDiv);
                
                // Create navigation dot
                const navBtn = document.createElement('button');
                navBtn.className = 'timeline-nav-btn' + (index === 0 ? ' active' : '');
                navBtn.dataset.index = index;
                navBtn.addEventListener('click', () => moveCarToYear(index));
                navContainer.appendChild(navBtn);
            });
            
            // Position car at first year
            moveCarToYear(0, false);
        }

        function moveCarToYear(index, animate = true) {
            const markers = document.querySelectorAll('.year-marker');
            const navButtons = document.querySelectorAll('.timeline-nav-btn');
            const car = document.getElementById('cartoonCar');
            const container = document.querySelector('.road-container');
            
            if (markers[index]) {
                // Update active state
                markers.forEach(el => el.classList.remove('active'));
                navButtons.forEach(btn => btn.classList.remove('active'));
                
                markers[index].classList.add('active');
                navButtons[index].classList.add('active');
                
                // Calculate car position based on marker
                const markerBtn = markers[index].querySelector('.year-marker-btn');
                const markerRect = markerBtn.getBoundingClientRect();
                const containerRect = container.getBoundingClientRect();
                const roadWidth = container.offsetWidth;
                
                // Calculate percentage position on the road
                const markerCenter = markerRect.left - containerRect.left + (markerRect.width / 2);
                const positionPercent = (markerCenter / roadWidth) * 100;
                
                // Move car to that position
                car.style.left = positionPercent + '%';
                
                // Scroll container to show the marker if needed
                const scrollPos = markerRect.left - containerRect.left + (markerRect.width / 2) - (container.offsetWidth / 2);
                container.scrollTo({
                    left: scrollPos,
                    behavior: animate ? 'smooth' : 'auto'
                });
            }
        }

