    <!-- JavaScript -->
    <script>
        // Loading Screen
        window.addEventListener('load', function() {
            setTimeout(function() {
                document.getElementById('loading').classList.add('hidden');
            }, 500);
        });

        // Update Year
        document.getElementById('year').textContent = new Date().getFullYear();

        // Scroll to Top Button
        const scrollTopBtn = document.getElementById('scrollTop');
        
        window.addEventListener('scroll', function() {
            if (window.pageYOffset > 300) {
                scrollTopBtn.classList.add('visible');
            } else {
                scrollTopBtn.classList.remove('visible');
            }
        });

        scrollTopBtn.addEventListener('click', function() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });

        // Smooth Scroll for Navigation Links
        document.querySelectorAll('nav a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Fan Messages Form Handler
        document.getElementById('fanForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const fanName = document.getElementById('fanName').value;
            const fanMessage = document.getElementById('fanMessage').value;
            
            // Get current date
            const today = new Date();
            const dateStr = today.toISOString().split('T')[0];
            
            // Hide "no messages" message
            const noMessages = document.getElementById('noMessages');
            if (noMessages) {
                noMessages.style.display = 'none';
            }
            
            // Create new message card
            const messagesDisplay = document.getElementById('messagesDisplay');
            const newMessage = document.createElement('div');
            newMessage.className = 'message-card';
            newMessage.innerHTML = `
                <div class="message-header">
                    <strong>${fanName}</strong>
                    <span class="msg-date">${dateStr}</span>
                    <button class="heart-btn" onclick="toggleLike(this)">❤️</button>
                    <span class="likes-count">0</span>
                </div>
                <p>${fanMessage}</p>
            `;
            
            // Insert at the beginning of messages display
            messagesDisplay.insertBefore(newMessage, messagesDisplay.firstChild);
            
            // Update total messages count
            updateMessagesCount();
            
            // Show success message
            alert('شكراً ' + fanName + '! تم إرسال رسالتك بنجاح.');
            
            // Reset form
            this.reset();
        });

        // Toggle like function
        function toggleLike(btn) {
            const likesCount = btn.nextElementSibling;
            let count = parseInt(likesCount.textContent);
            
            if (btn.classList.contains('liked')) {
                btn.classList.remove('liked');
                likesCount.textContent = count - 1;
            } else {
                btn.classList.add('liked');
                likesCount.textContent = count + 1;
            }
        }

        // Update messages count
        function updateMessagesCount() {
            const messageCards = document.querySelectorAll('.message-card');
            const countSpan = document.getElementById('totalMessages');
            countSpan.textContent = '(' + messageCards.length + ')';
        }

        // Post Upload Type Selector
        function selectUploadType(type) {
            // Update buttons
            document.querySelectorAll('.upload-type-btn').forEach(btn => {
                btn.classList.remove('active');
                if (btn.dataset.type === type) {
                    btn.classList.add('active');
                }
            });
            
            // Show/hide sections
            document.querySelectorAll('.post-upload-section').forEach(section => {
                section.classList.remove('active');
            });
            document.getElementById(type + 'UploadSection').classList.add('active');
        }

        // Image Upload Handler
        document.getElementById('imageInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                document.getElementById('imageFileName').textContent = file.name;
                
                const reader = new FileReader();
                reader.onload = function(event) {
                    addPost('image', event.target.result);
                };
                reader.readAsDataURL(file);
                
                // Reset input
                this.value = '';
            }
        });

        // Video Upload Handler
        document.getElementById('videoInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                document.getElementById('videoFileName').textContent = file.name;
                
                const reader = new FileReader();
                reader.onload = function(event) {
                    addPost('video', event.target.result);
                };
                reader.readAsDataURL(file);
                
                // Reset input
                this.value = '';
            }
        });

        // Add Text Post
        function addTextPost() {
            const textContent = document.getElementById('postTextInput').value.trim();
            if (textContent) {
                addPost('text', textContent);
                document.getElementById('postTextInput').value = '';
            }
        }

        // Add Post Function
        function addPost(type, content) {
            const noPosts = document.getElementById('noPosts');
            if (noPosts) {
                noPosts.style.display = 'none';
            }
            
            const postsGrid = document.getElementById('postsGrid');
            const today = new Date();
            const dateStr = today.toISOString().split('T')[0];
            
            const postCard = document.createElement('div');
            postCard.className = 'post-card ' + type + '-post';
            postCard.dataset.type = type;
            
            let contentHtml = '';
            let typeBadge = '';
            
            if (type === 'image') {
                typeBadge = '<span class="post-type-badge">📷 صورة</span>';
                contentHtml = '<img src="' + content + '" alt="صورة">';
            } else if (type === 'video') {
                typeBadge = '<span class="post-type-badge">🎬 فيديو</span>';
                contentHtml = '<video controls src="' + content + '"></video>';
            } else if (type === 'text') {
                typeBadge = '<span class="post-type-badge">📝 نص</span>';
                contentHtml = '<div class="post-content"><p class="post-text-content">' + content + '</p></div>';
            }
            
            postCard.innerHTML = typeBadge + contentHtml + `
                <div class="post-info">
                    <div class="post-actions">
                        <button class="post-action-btn like-btn" onclick="togglePostLike(this)">
                            ❤️ <span class="post-likes">0</span>
                        </button>
                        <button class="post-action-btn comment-btn" onclick="togglePostComments(this)">
                            💬 <span class="post-comments-count">0</span>
                        </button>
                        <span class="post-date">${dateStr}</span>
                    </div>
                    <div class="comments-section">
                        <div class="comments-list"></div>
                        <div class="comment-form">
                            <input type="text" placeholder="اكتب تعليقاً..." class="commentInput">
                            <button onclick="addPostComment(this)">إرسال</button>
                        </div>
                    </div>
                </div>
            `;
            
            postsGrid.insertBefore(postCard, postsGrid.firstChild);
            updatePostsCount();
        }

        // Toggle Post Like
        function togglePostLike(btn) {
            const likesSpan = btn.querySelector('.post-likes');
            let count = parseInt(likesSpan.textContent);
            
            if (btn.classList.contains('liked')) {
                btn.classList.remove('liked');
                likesSpan.textContent = count - 1;
            } else {
                btn.classList.add('liked');
                likesSpan.textContent = count + 1;
            }
        }

        // Toggle Post Comments Section
        function togglePostComments(btn) {
            const postCard = btn.closest('.post-card');
            const commentsSection = postCard.querySelector('.comments-section');
            commentsSection.classList.toggle('show');
        }

        // Add Post Comment
        function addPostComment(btn) {
            const commentInput = btn.previousElementSibling;
            const commentText = commentInput.value.trim();
            
            if (commentText) {
                const commentsList = btn.closest('.comments-section').querySelector('.comments-list');
                const today = new Date();
                const dateStr = today.toISOString().split('T')[0];
                
                const comment = document.createElement('div');
                comment.className = 'comment';
                comment.innerHTML = `<strong>مجهول</strong><span>${dateStr}</span><p>${commentText}</p>`;
                
                commentsList.appendChild(comment);
                
                // Update comments count
                const commentsCount = btn.closest('.post-info').querySelector('.post-comments-count');
                let count = parseInt(commentsCount.textContent);
                commentsCount.textContent = count + 1;
                
                // Clear input
                commentInput.value = '';
            }
        }

        // Filter Posts by Type
        function filterPosts(type) {
            // Update tab buttons
            document.querySelectorAll('.post-tab-btn').forEach(btn => {
                btn.classList.remove('active');
                if (btn.dataset.filter === type) {
                    btn.classList.add('active');
                }
            });
            
            // Show/hide posts
            const posts = document.querySelectorAll('.post-card');
            posts.forEach(post => {
                if (type === 'all' || post.dataset.type === type) {
                    post.style.display = 'block';
                } else {
                    post.style.display = 'none';
                }
            });
        }

        // Update posts count
        function updatePostsCount() {
            const posts = document.querySelectorAll('.post-card');
            const countSpan = document.getElementById('totalPosts');
            countSpan.textContent = '(' + posts.length + ')';
        }

        // Profile Picture Functions
        function changeProfilePicture(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('profileImage').src = e.target.result;
                    // Save to localStorage
                    localStorage.setItem('profilePicture', e.target.result);
                };
                reader.readAsDataURL(file);
            }
        }

        // Load saved profile picture on page load
        window.addEventListener('load', function() {
            const savedProfile = localStorage.getItem('profilePicture');
            if (savedProfile) {
                document.getElementById('profileImage').src = savedProfile;
            }
            
            // Load saved theme
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme === 'light') {
                document.body.classList.add('light-mode');
                document.querySelector('.theme-btn').innerHTML = '☀️';
            }
            
            // Detect user's device language preference
            const userLang = navigator.language || navigator.userLanguage;
            const savedLang = localStorage.getItem('language');
            
            // If user has saved language preference, use it
            // Otherwise, detect from device/browser language
            let shouldSwitchToEnglish = false;
            
            if (savedLang === 'en') {
                shouldSwitchToEnglish = true;
            } else if (!savedLang) {
                // Check if browser language is English (not Arabic)
                const isArabicBrowser = userLang.startsWith('ar');
                if (!isArabicBrowser) {
                    shouldSwitchToEnglish = true;
                }
            }
            
            // Apply language
            if (shouldSwitchToEnglish) {
                toggleLanguage();
            }
        });

        // Theme Toggle Function
        function toggleTheme() {
            document.body.classList.toggle('light-mode');
            const isLightMode = document.body.classList.contains('light-mode');
            const themeBtn = document.querySelector('.theme-btn');
            
            if (isLightMode) {
                themeBtn.innerHTML = '☀️';
                localStorage.setItem('theme', 'light');
            } else {
                themeBtn.innerHTML = '🌙';
                localStorage.setItem('theme', 'dark');
            }
        }

        // Language Toggle Function
        function toggleLanguage() {
            const langBtn = document.querySelector('.lang-btn');
            const isArabic = document.documentElement.getAttribute('lang') === 'ar';
            
            if (isArabic) {
                // Switch to English
                document.documentElement.setAttribute('lang', 'en');
                document.documentElement.setAttribute('dir', 'ltr');
                // Button shows what language you can switch TO (Arabic)
                langBtn.textContent = 'عربي';
                localStorage.setItem('language', 'en');
                updateEnglishContent();
            } else {
                // Switch to Arabic
                document.documentElement.setAttribute('lang', 'ar');
                document.documentElement.setAttribute('dir', 'rtl');
                // Button shows what language you can switch TO (English)
                langBtn.textContent = 'English';
                localStorage.setItem('language', 'ar');
                updateArabicContent();
            }
        }

        // Update content for English
        function updateEnglishContent() {
            const translations = {
                'nav-about': 'About Me',
                'nav-tvseries': 'My TV Works',
                'nav-photos': 'Photos',
                'nav-messages': 'Fan Messages',
